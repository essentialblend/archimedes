<Application x:Class="archimedes.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:archimedes"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Resources/Icons.xaml"/>
        <ResourceDictionary Source="Resources/Controls.xaml"/>
        <ResourceDictionary Source="Resources/TransportBar.xaml"/>
        <ResourceDictionary Source="Themes/Light.xaml"/>
      </ResourceDictionary.MergedDictionaries>

      <FontFamily x:Key="Font.UIFamily">Segoe UI Variable Text</FontFamily>

      <Style TargetType="{x:Type Window}">
        <Setter Property="FontFamily" Value="{DynamicResource Font.UIFamily}"/>
      </Style>
    </ResourceDictionary>
  </Application.Resources>
</Application>
