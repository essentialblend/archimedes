<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Geometry x:Key="Icon.CycleCollapse">M4,14 H10 V20 M20,10 H14 V4</Geometry>
  <Geometry x:Key="Icon.CyclePhaseHourglass">M6,4 L18,4 L12,11 L18,20 L6,20 L12,11 Z</Geometry>
  <Geometry x:Key="Icon.DeckPlay">M6,5 V19 L18,12 Z</Geometry>
  <Geometry x:Key="Icon.DeckResetDiamond">M12,3 L20,12 L12,21 L4,12 Z</Geometry>
  <Geometry x:Key="Icon.DeckHushFill">M5,5 H9 V19 H5 Z M15,5 H19 V19 H15 Z</Geometry>
  <Geometry x:Key="Icon.DeckHushSlash">M4,4 L20,20</Geometry>
  <Geometry x:Key="Icon.ThemeMoon">M21,12.79 A9,9 0 1 1 11.21,3 A7,7 0 0 0 21,12.79 Z</Geometry>
  <Geometry x:Key="Icon.TerminateOutline">M4,4 H20 V20 H4 Z</Geometry>
  <Geometry x:Key="Icon.TerminateFill">M9,9 H15 V15 H9 Z</Geometry>

  <DataTemplate x:Key="Icon.TerminateTemplate">
    <Viewbox Width="16" Height="16" Stretch="Uniform">
      <Canvas Width="24" Height="24">
        <Path Data="{StaticResource Icon.TerminateOutline}"
              Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
              StrokeThickness="1.5"
              StrokeStartLineCap="Square"
              StrokeEndLineCap="Square"
              StrokeLineJoin="Miter"
              Fill="Transparent"/>
        <Path Data="{StaticResource Icon.TerminateFill}"
              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"/>
      </Canvas>
    </Viewbox>
  </DataTemplate>

</ResourceDictionary>
