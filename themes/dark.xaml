<!--Themes/Dark.xaml-->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">
  <!-- Dimensions -->
  <GridLength x:Key="Dim.BarHeight">42</GridLength>
  <sys:Double x:Key="Dim.WidgetHeight">22</sys:Double>
  <GridLength x:Key="Dim.StatusHeight">42</GridLength>

  <!-- Backgrounds -->
  <SolidColorBrush x:Key="Brush.BG.Body"  Color="#0D0D0D"/>
  <SolidColorBrush x:Key="Brush.BG.Bar"   Color="#141414"/>
  <SolidColorBrush x:Key="Brush.BG.Panel" Color="#111111"/>
  <SolidColorBrush x:Key="Brush.BG.Hover" Color="#222222"/>
  <SolidColorBrush x:Key="Brush.BG.Active" Color="#333333"/>
  <SolidColorBrush x:Key="Brush.BG.Menu"  Color="#1A1A1A"/>
  <SolidColorBrush x:Key="Brush.BG.Console" Color="#111111"/>

  <!-- Editor palette (Dark) -->
  <SolidColorBrush x:Key="Brush.Editor.BG" Color="#1C1C1C"/>
  <SolidColorBrush x:Key="Brush.Editor.FG" Color="#E6E6E6"/>
  <SolidColorBrush x:Key="Brush.Editor.Gutter.FG" Color="#8A8A8A"/>

  <SolidColorBrush x:Key="Brush.Editor.Selection" Color="#22FFFFFF"/>
  <SolidColorBrush x:Key="Brush.Editor.SelectionFG" Color="#E6E6E6"/>
  <SolidColorBrush x:Key="Brush.Editor.CurrentLine" Color="#06FFFFFF"/>
  <SolidColorBrush x:Key="Brush.Editor.Caret" Color="#E6E6E6"/>

  <SolidColorBrush x:Key="Brush.Editor.CurrentLineBorder" Color="#16FFFFFF"/>
  <Pen x:Key="Pen.Editor.CurrentLineBorder" Brush="{DynamicResource Brush.Editor.CurrentLineBorder}" Thickness="1"/>

  <!-- Syntax (Tidal) Dark+ -->
  <SolidColorBrush x:Key="Brush.Syntax.Comment"  Color="#6A9955"/>
  <SolidColorBrush x:Key="Brush.Syntax.String"   Color="#CE9178"/>
  <SolidColorBrush x:Key="Brush.Syntax.Escape"   Color="#D7BA7D"/>
  <SolidColorBrush x:Key="Brush.Syntax.Number"   Color="#B5CEA8"/>
  <SolidColorBrush x:Key="Brush.Syntax.Stream"   Color="#9CDCFE"/>
  <SolidColorBrush x:Key="Brush.Syntax.Operator" Color="#D4D4D4"/>
  <SolidColorBrush x:Key="Brush.Syntax.Comma"    Color="#D4D4D4"/>

  <!-- Borders -->
  <SolidColorBrush x:Key="Brush.Border"        Color="#000000"/>
  <SolidColorBrush x:Key="Brush.Border.Light"  Color="#2A2A2A"/>

  <!-- Text -->
  <SolidColorBrush x:Key="Brush.Text.Main"   Color="#D4D4D4"/>
  <SolidColorBrush x:Key="Brush.Text.Dim"    Color="#666666"/>
  <SolidColorBrush x:Key="Brush.Text.Accent" Color="#E5E5E5"/>

  <!-- Accents -->
  <SolidColorBrush x:Key="Brush.Acc.Main"  Color="#818CF8"/>
  <SolidColorBrush x:Key="Brush.Acc.Green" Color="#10B981"/>
  <SolidColorBrush x:Key="Brush.Acc.Yellow" Color="#E5C14F"/>
  <SolidColorBrush x:Key="Brush.Acc.Red"   Color="#EF4444"/>
  <SolidColorBrush x:Key="Brush.Acc.Flash" Color="#FFFFFF"/>

  <SolidColorBrush x:Key="Brush.CycleBtn.BG" Color="#14818CF8"/>

  <!-- Inputs -->
  <SolidColorBrush x:Key="Brush.Input.BG"      Color="#0AFFFFFF"/>
  <!-- ~rgba(255,255,255,0.04) -->
  <SolidColorBrush x:Key="Brush.Input.BGHover" Color="#14FFFFFF"/>
  <!-- ~rgba(255,255,255,0.08) -->

  <!-- Scrollbars -->
  <SolidColorBrush x:Key="Brush.Scrollbar.Track" Color="#0AFFFFFF"/>
  <SolidColorBrush x:Key="Brush.Scrollbar.Thumb" Color="#666666"/>
  <SolidColorBrush x:Key="Brush.Scrollbar.ThumbHover" Color="#707070"/>

  <!-- Theme Toggle Icon (Dark) -->
  <DataTemplate x:Key="ThemeToggleIconTemplate">
    <Viewbox Width="18" Height="18" Stretch="Uniform">
      <Canvas Width="24" Height="24">
        <Ellipse Width="18" Height="18" Canvas.Left="3" Canvas.Top="3"
                 Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                 StrokeThickness="1.5"/>
        <Line X1="2" Y1="12" X2="22" Y2="12"
              Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
              StrokeThickness="2"/>
        <Path Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
              Opacity="0.8">
          <Path.Data>
            <PathGeometry>
              <PathFigure StartPoint="3,12" IsClosed="True">
                <ArcSegment Point="21,12" Size="9,9" SweepDirection="Clockwise" IsLargeArc="False"/>
              </PathFigure>
            </PathGeometry>
          </Path.Data>
        </Path>
        <Ellipse Width="3" Height="3" Canvas.Left="10.5" Canvas.Top="5.5" StrokeThickness="0"
                 Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
      </Canvas>
    </Viewbox>
  </DataTemplate>
</ResourceDictionary>
