<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    <!-- Dimensions -->
    <GridLength x:Key="Dim.BarHeight">42</GridLength>
    <GridLength x:Key="Dim.WidgetHeight">22</GridLength>
    <sys:Double x:Key="Dim.StatusHeight">42</sys:Double>

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="Brush.BG.Body"  Color="#0D0D0D"/>
    <SolidColorBrush x:Key="Brush.BG.Bar"   Color="#141414"/>
    <SolidColorBrush x:Key="Brush.BG.Panel" Color="#111111"/>
    <SolidColorBrush x:Key="Brush.BG.Hover" Color="#222222"/>
    <SolidColorBrush x:Key="Brush.BG.Active" Color="#333333"/>
    <SolidColorBrush x:Key="Brush.BG.Menu"  Color="#1A1A1A"/>
    <SolidColorBrush x:Key="Brush.BG.Console" Color="#111111"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="Brush.Border"        Color="#000000"/>
    <SolidColorBrush x:Key="Brush.Border.Light"  Color="#2A2A2A"/>

    <!-- Text -->
    <SolidColorBrush x:Key="Brush.Text.Main"   Color="#D4D4D4"/>
    <SolidColorBrush x:Key="Brush.Text.Dim"    Color="#666666"/>
    <SolidColorBrush x:Key="Brush.Text.Accent" Color="#E5E5E5"/>

    <!-- Accents -->
    <SolidColorBrush x:Key="Brush.Acc.Main"  Color="#818CF8"/>
    <SolidColorBrush x:Key="Brush.Acc.Green" Color="#10B981"/>
    <SolidColorBrush x:Key="Brush.Acc.Red"   Color="#EF4444"/>
    <SolidColorBrush x:Key="Brush.Acc.Flash" Color="#FFFFFF"/>

    <SolidColorBrush x:Key="Brush.CycleBtn.BG" Color="#14818CF8"/>

    <!-- Inputs -->
    <SolidColorBrush x:Key="Brush.Input.BG"      Color="#0AFFFFFF"/>
    <!-- ~rgba(255,255,255,0.04) -->
    <SolidColorBrush x:Key="Brush.Input.BGHover" Color="#14FFFFFF"/>
    <!-- ~rgba(255,255,255,0.08) -->
</ResourceDictionary>