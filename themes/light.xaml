<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">

  <!-- Dimensions -->
  <GridLength x:Key="Dim.BarHeight">42</GridLength>
  <GridLength x:Key="Dim.StatusHeight">42</GridLength>
  <sys:Double x:Key="Dim.WidgetHeight">22</sys:Double>

  <!-- Backgrounds -->
  <SolidColorBrush x:Key="Brush.BG.Body"    Color="#E5E5E5"/>
  <SolidColorBrush x:Key="Brush.BG.Bar"     Color="#F0F0F0"/>
  <SolidColorBrush x:Key="Brush.BG.Panel"   Color="#FFFFFF"/>
  <SolidColorBrush x:Key="Brush.BG.Hover"   Color="#E0E0E0"/>
  <SolidColorBrush x:Key="Brush.BG.Active"  Color="#CCCCCC"/>
  <SolidColorBrush x:Key="Brush.BG.Menu"    Color="#F2F2F2"/>
  <SolidColorBrush x:Key="Brush.BG.Console" Color="#F9FAFB"/>

  <!-- Editor palette (Light) -->
  <SolidColorBrush x:Key="Brush.Editor.BG" Color="#F6F6F6"/>
  <SolidColorBrush x:Key="Brush.Editor.FG" Color="#1E1E1E"/>
  <SolidColorBrush x:Key="Brush.Editor.Gutter.FG" Color="#7A7A7A"/>

  <SolidColorBrush x:Key="Brush.Editor.Selection" Color="#22000000"/>
  <SolidColorBrush x:Key="Brush.Editor.SelectionFG" Color="#1E1E1E"/>
  <SolidColorBrush x:Key="Brush.Editor.CurrentLine" Color="#03000000"/>
  <SolidColorBrush x:Key="Brush.Editor.Caret" Color="#1E1E1E"/>
  
  <SolidColorBrush x:Key="Brush.Editor.CurrentLineBorder" Color="#16000000"/>
  <Pen x:Key="Pen.Editor.CurrentLineBorder" Brush="{DynamicResource Brush.Editor.CurrentLineBorder}" Thickness="1"/>

  <!-- Syntax (Tidal) — Light+ -->
  <SolidColorBrush x:Key="Brush.Syntax.Comment"  Color="#008000"/>
  <SolidColorBrush x:Key="Brush.Syntax.String"   Color="#A31515"/>
  <SolidColorBrush x:Key="Brush.Syntax.Escape"   Color="#EE0000"/>
  <SolidColorBrush x:Key="Brush.Syntax.Number"   Color="#098658"/>
  <SolidColorBrush x:Key="Brush.Syntax.Stream"   Color="#001080"/>
  <SolidColorBrush x:Key="Brush.Syntax.Operator" Color="#000000"/>
  <SolidColorBrush x:Key="Brush.Syntax.Comma"    Color="#000000"/>

  <!-- Borders -->
  <SolidColorBrush x:Key="Brush.Border"       Color="#000000"/>
  <SolidColorBrush x:Key="Brush.Border.Light" Color="#D4D4D8"/>

  <!-- Text -->
  <SolidColorBrush x:Key="Brush.Text.Main"   Color="#000000"/>
  <SolidColorBrush x:Key="Brush.Text.Dim"    Color="#404040"/>
  <SolidColorBrush x:Key="Brush.Text.Accent" Color="#000000"/>

  <!-- Accents -->
  <Color x:Key="Color.Acc.Main">#4F46E5</Color>
  <SolidColorBrush x:Key="Brush.Acc.Main"  Color="{DynamicResource Color.Acc.Main}"/>
  <SolidColorBrush x:Key="Brush.Acc.PatternHighlight" Color="#DC143C"/>
  <SolidColorBrush x:Key="Brush.Acc.Vfx" Color="#D7263D"/>
  <SolidColorBrush x:Key="Brush.Acc.Green" Color="#10B981"/>
  <SolidColorBrush x:Key="Brush.Acc.Red"   Color="#EF4444"/>
  <SolidColorBrush x:Key="Brush.Acc.Flash" Color="#000000"/>

  <SolidColorBrush x:Key="Brush.CycleBtn.BG" Color="#144F46E5"/>

  <!-- Completion -->
  <SolidColorBrush x:Key="Brush.Completion.Highlight" Color="#DCE6FF"/>
  <SolidColorBrush x:Key="Brush.Completion.HighlightText" Color="#1E1E1E"/>
  <SolidColorBrush x:Key="Brush.Completion.Panel" Color="#FFFFFF"/>
  <SolidColorBrush x:Key="Brush.Completion.PanelBorder" Color="#D4D4DA"/>
  <SolidColorBrush x:Key="Brush.Completion.PanelSection" Color="#F6F6F8"/>
  <SolidColorBrush x:Key="Brush.Completion.PanelChip" Color="#F0F0F4"/>
  <SolidColorBrush x:Key="Brush.Completion.PanelChipBorder" Color="#D3D3DA"/>

  <!-- Inputs -->
  <SolidColorBrush x:Key="Brush.Input.BG"      Color="#0A000000"/>
  <SolidColorBrush x:Key="Brush.Input.BGHover" Color="#14000000"/>

  <!-- Scrollbars -->
  <SolidColorBrush x:Key="Brush.Scrollbar.Track" Color="#E6E6E6"/>
  <SolidColorBrush x:Key="Brush.Scrollbar.Thumb" Color="#B0B0B0"/>
  <SolidColorBrush x:Key="Brush.Scrollbar.ThumbHover" Color="#BABABA"/>

  <!-- Theme Toggle Icon (Light) -->
  <DataTemplate x:Key="ThemeToggleIconTemplate">
    <Grid>
      <Viewbox Width="18" Height="18" Stretch="Uniform" SnapsToDevicePixels="True" UseLayoutRounding="True">
        <Canvas x:Name="IconRoot" Width="24" Height="24" SnapsToDevicePixels="True" UseLayoutRounding="True">
          <Path Data="M12,2 V22"
                Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                StrokeThickness="1.5"
                StrokeStartLineCap="Square"
                StrokeEndLineCap="Square"/>
          <Path Data="M2,12 H22"
                Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                StrokeThickness="1.5"
                StrokeStartLineCap="Square"
                StrokeEndLineCap="Square"/>
          <Path Data="M5,5 L19,19"
                Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                StrokeThickness="1.5"
                StrokeStartLineCap="Square"
                StrokeEndLineCap="Square"/>
          <Path Data="M19,5 L5,19"
                Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                StrokeThickness="1.5"
                StrokeStartLineCap="Square"
                StrokeEndLineCap="Square"/>
        </Canvas>
      </Viewbox>
    </Grid>
    <DataTemplate.Triggers>
      <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=IsMouseOver}" Value="True">
        <Setter TargetName="IconRoot" Property="Effect">
          <Setter.Value>
            <DropShadowEffect BlurRadius="10"
                              ShadowDepth="0"
                              Opacity="0.45"
                              Color="{DynamicResource Color.Acc.Main}"/>
          </Setter.Value>
        </Setter>
      </DataTrigger>
    </DataTemplate.Triggers>
  </DataTemplate>

</ResourceDictionary>
