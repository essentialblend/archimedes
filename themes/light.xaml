<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">

    <!-- Dimensions -->
    <GridLength x:Key="Dim.BarHeight">42</GridLength>
    <GridLength x:Key="Dim.StatusHeight">42</GridLength>
    <sys:Double x:Key="Dim.WidgetHeight">22</sys:Double>

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="Brush.BG.Body"    Color="#E5E5E5"/>
    <SolidColorBrush x:Key="Brush.BG.Bar"     Color="#F0F0F0"/>
    <SolidColorBrush x:Key="Brush.BG.Panel"   Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Brush.BG.Hover"   Color="#E0E0E0"/>
    <SolidColorBrush x:Key="Brush.BG.Active"  Color="#CCCCCC"/>
    <SolidColorBrush x:Key="Brush.BG.Menu"    Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Brush.BG.Console" Color="#F9FAFB"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="Brush.Border"       Color="#000000"/>
    <SolidColorBrush x:Key="Brush.Border.Light" Color="#D4D4D8"/>

    <!-- Text -->
    <SolidColorBrush x:Key="Brush.Text.Main"   Color="#000000"/>
    <SolidColorBrush x:Key="Brush.Text.Dim"    Color="#404040"/>
    <SolidColorBrush x:Key="Brush.Text.Accent" Color="#000000"/>

    <!-- Accents -->
    <SolidColorBrush x:Key="Brush.Acc.Main"  Color="#4F46E5"/>
    <SolidColorBrush x:Key="Brush.Acc.Green" Color="#10B981"/>
    <SolidColorBrush x:Key="Brush.Acc.Red"   Color="#EF4444"/>
    <SolidColorBrush x:Key="Brush.Acc.Flash" Color="#000000"/>

    <SolidColorBrush x:Key="Brush.CycleBtn.BG" Color="#144F46E5"/>

    <!-- Inputs -->
    <SolidColorBrush x:Key="Brush.Input.BG"      Color="#0A000000"/>
    <SolidColorBrush x:Key="Brush.Input.BGHover" Color="#14000000"/>

</ResourceDictionary>
